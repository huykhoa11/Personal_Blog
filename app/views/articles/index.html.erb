<section class="w-full absolute">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <main class=" w-full flex justify-between items-start space-x-4 pl-16 pr-14">
    <%# Left screen - Show articles %>
    <ul class=" w-3/5 space-y-7">
        <% @articles.each do |article| %>
          <%= render partial: 'articles/article', locals: {article: article}%>
        <% end %>
    </ul>

    <%# Right screen - show categories %>
    <div class=" w-1/3">
      <%= render 'categories/categoriesSideList' %>
    </div>
  </main>


  <%= render 'layouts/bottomNavbar' %>
</section>
